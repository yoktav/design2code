                    <svg class="icon icon-chevron-right date-selection__item-icon">
                        <use xlink:href="#icon-chevron-right"></use>
                    </svg></div>
            </div>

            {% for cardInfo in cardsDeparture %}
            <div class="card">
                <div class="card-top">
                    <div class="card-top__flex">
                        <div class="card-top__flex-item">
                            <img src=" {{ cardInfo.imgSrc }} " alt="{{ cardInfo.imgAlt }}" class="card__image">
                        </div>
                        <div class="card-top__flex-item">
                            <span class="card-top__flex-item-price float-right">{{ cardInfo.cardPrice }}</span>
                        </div>
                        <div class="card-top__flex-item">
